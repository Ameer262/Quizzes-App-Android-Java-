<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizDetailedActivity">



    <TextView
        android:id="@+id/QuizName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Quiz Name"
        android:textSize="65dp"
        android:textColor="#E6A757"
        android:fontFamily="@font/caveatbrush"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />

    <TextView
        android:id="@+id/QuizCreatorName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="00dp"
        android:text="By: (creator name)"
        android:textSize="30dp"
        android:textColor="#E6A757"
        android:fontFamily="@font/caveatbrush"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />

    <ImageView
        android:id="@+id/QuizImage"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/generalknowledgeicon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        android:text="Description:"
        android:textSize="40dp"
        android:textColor="#E6A757"
        android:fontFamily="@font/caveatbrush"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />


    <TextView
        android:id="@+id/QuizDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:text="Contains general-themed questions, from all categories combined, from all fields and topics."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/playQuizButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="40dp"
        android:backgroundTint="#4CAF50"
        android:drawableRight="@drawable/baseline_play_arrow_24"
        android:padding="17dp"
        android:text="Play"
        android:textSize="18dp" />

</LinearLayout>
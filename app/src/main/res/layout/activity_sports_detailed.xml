<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsDetailedActivity"
    android:orientation="vertical"
>


    <TextView
        android:id="@+id/categoryName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Sports"
        android:textSize="65dp"
        android:textColor="@color/myOrange"
        android:fontFamily="@font/caveatbrush"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />


    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/sportscategoryicon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"

        android:text="Description:"
        android:textSize="40dp"
        android:textColor="@color/myOrange"
        android:fontFamily="@font/caveatbrush"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        />


    <TextView
        android:id="@+id/categoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"

        android:text="Contains sports-themed questions, Gym, Football, Soccer, Basketball, Volley, Golf and more... QuizWiz Sportly !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/toQuizzesButtonSports"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#4CAF50"
        android:padding="17dp"
        android:text="Quizzes"
        android:textSize="22dp" />



</LinearLayout>